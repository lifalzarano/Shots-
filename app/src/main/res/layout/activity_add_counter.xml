<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.laurenfalzarano.shots.AddCounterActivity">

    <!--<TextView android:text="Landon"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="25dp"-->
        <!--android:paddingTop="10dp"-->
        <!--android:layout_centerHorizontal="true"/>-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/counter_name"
        android:hint="Type name..."/>

    <LinearLayout
        android:id="@+id/button_group"
        android:layout_below="@+id/counter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/count_decrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_angle_left"
            android:textSize="20sp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textSize="20sp"
            />


        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/count_increment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_angle_right"
            android:textSize="20sp"
            />

    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Add"
        android:layout_centerHorizontal="true"
        android:id="@+id/submit_counter"
        android:layout_below="@+id/button_group"/>

</RelativeLayout>
